<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <askxhacker.CircleImageView
        android:layout_marginLeft="@dimen/keyline_margin"
        android:id="@+id/msg_photo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/default_photo"
        android:scaleType="fitCenter" />
    <RelativeLayout
        android:layout_marginRight="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingRight="16dp"
        android:paddingLeft="24dp"
        android:background="@drawable/msg_incoming">
        <TextView
            android:id="@+id/msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="17sp"
            android:paddingBottom="4dp"
            android:text="Hello world!" />
        <TextView
            android:id="@+id/msg_timestamp"
            android:layout_below="@id/msg_text"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff6a6a6a"
            android:textSize="14sp"
            android:text="2:22 AM" />
    </RelativeLayout>
</LinearLayout>